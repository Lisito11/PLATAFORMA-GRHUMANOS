
@model IEnumerable<ENTIDAD.SalidaEmpleadoLS>
@using NEGOCIO;
<div>
    <h1>Salida de Empleados</h1>
</div>
<table class="table table-striped table-hover table-bordered" id="tablaSalida" style="width:100%">
    <thead>
        <tr>
            <th>Ex empleado</th>
            <th>Tipo de salida</th>
            <th> Motivo</th>
            <th> Mes de salida</th>
            <th> Año de salida</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr class="danger">
                <td>
                    @item.Apellidos @item.Nombres
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoSalida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Motivo)
                </td>
                <td>
                    @Meses.NameMes(item.FechaSalida.Month)
                </td>
                <td>
                    @item.FechaSalida.Year
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a href="@Url.Action("Index", "Proceso")" class="btn btn-primary">Continuar</a>
    <a href="@Url.Action("ListaEmpleadosInactivar", "SalidaEmpleado")" class="btn btn-info"><i class="glyphicon glyphicon-plus"></i> Inactivar otro</a>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            // Setup - add a text input to each footer cell
            $('#tablaSalida thead tr').clone(true).appendTo('#tablaSalida thead');
            $('#tablaSalida thead tr:eq(1) th').each(function (i) {
                var title = $(this).text().trim().toLowerCase();
                console.log(`Es es el titulo "${title}"`);
                $(this).html('<input type="text" class="form-control" placeholder="Buscar ' + title + '" />');

                $('input', this).on('keyup change', function () {
                    if (table.column(i).search() !== this.value) {
                        table
                            .column(i)
                            .search(this.value)
                            .draw();
                    }
                });
            });

            var table = $('#tablaSalida').DataTable({
                orderCellsTop: true,
                fixedHeader: true,
                responsive: true
            });
        });
    </script>
}

